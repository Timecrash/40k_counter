<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>40k Counter</title>
    <link href="/css/layout.css" rel="stylesheet">
    <script src="js/counter.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="center" id="turn">
        <h3>Turn</h3>
        <button class="button" id="minus" onClick="modifyCounter(this.id, 'turn')">-</button>
        <p ><a id="turn_amount">0</a></p>
        <button class="button" id="plus" onClick="modifyCounter(this.id, 'turn')">+</button>
      </div>
    </div>
    <div class="container">
      <div class="center" id="command">
        <h3>Command Points</h3>
        <button class="button" id="minus" onClick="modifyCounter(this.id, 'cp')">-</button>
        <p><a id="cp_amount">0</a></p>
        <button class="button" id="plus" onClick="modifyCounter(this.id, 'cp')">+</button>
      </div>
    </div>
    <div class="container">
      <div class="center" id="victory">
        <h3>Victory Points</h3>
        <button class="button" id="minus" onClick="modifyCounter(this.id, 'vp')">-</button>
        <p><a id="vp_amount">0</a></p>
        <button class="button" id="plus" onClick="modifyCounter(this.id, 'vp')">+</button>
      </div>
    </div>
    <div class="container">
      <div class="center" id="faith">
        <h3>Faith Points</h3>
        <button class="button" id="minus" onClick="modifyCounter(this.id, 'fp')">-</button>
        <p><a id="fp_amount">0</a></p>
        <button class="button" id="plus" onClick="modifyCounter(this.id, 'fp')">+</button>
      </div>
    </div>
  </body>
</html>
